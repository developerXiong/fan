.selection{
  width: 100%;
  
}
.selection:last-child{
  border-top: 8px solid gainsboro;
}
swiper{
  width: 100%;
}
swiper-item{
  width: 100%;
}
swiper-item image{
  width: 100%;
}
.header{
  border-left:2px solid greenyellow;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
  margin-bottom: 10px;
  padding-left:15px; 
  padding-right:15px; 
}
.text-all{
  color:green;
  font-size: 15px;
}
.content{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.content-item{
  width: 45%;
  height: 240rpx;
  background: red;
  margin: 5px;
  position: relative;
}
.content-item image{
  width: 100%;
  height: 100%;
}
.content-item-text{
  position: absolute;
  bottom: 0px;
  color: white;
  font-size: 15px;
  background: -webkit-linear-gradient(bottom,rgba(0,0,0,.9),rgba(0,0,0,0));
  height: 30px;
  width: 98%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-left: 1%;
  padding-right: 1%;
}
.list-item{
  height: 510rpx;
  width: 100%;
}
.list-item-images{
  height: 300rpx;
  width: 100%;
  position: relative;
}
.list-item-images-img{
  height: 100%;
  width: 100%;
}
.list-item-text{
  height: 190rpx;
  width: calc(100% - 20px);
  margin-top: 10px;
  padding-left: 10px;
  padding-right: 10px;
  margin-bottom: 10px;
   /* background: red;  */
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -50rpx;
  right: 50rpx;
}
.list-item-text-content{
  font-size: 15px;
  color: #aaaaaa;
  margin-top: 10px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
