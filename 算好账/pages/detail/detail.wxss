.container{
  width: 100%;
  min-height: 100%; 
  background-color:#F1F3F8;
  /* position: relative; */
}

.header{
  width: 100%;
  height:830rpx;
  position: relative;
}

.goBack{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
   left: 5%;
  top: 70rpx; 
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goBack image{
  width: 35rpx;
  height: 25rpx;
}
.title{
  width: 100%;
  height:80rpx; 
  position: absolute;
  top: 54rpx;
  left: 0;
  font-size: 38rpx;
  color: white;
  z-index: 9;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header_bg{
  width: 100%;
  height: 100%;
}
.header_bg image{
  width: 100%;
  height: 100%;
}
.header_cont{
  position: absolute;
  top: 140rpx;
  /* background: pink; */
  z-index: 100;
  width: 100%;
  height: 60%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.h_c_top{
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: center;
}
.month{
  height: 110rpx;
  width: 80%;
  white-space: nowrap;
  /* background: white; */
  line-height: 110rpx;
  color: white;
  font-size: 25rpx;
}
.month view{
  display:inline-block;
  margin-left: 50rpx;
  margin-right: 50rpx;
  padding-left: 4rpx;
  padding-right: 4rpx;
  height: 80rpx;
}
.month .scroll-view-item-normal{
  border-bottom: 2px solid transparent;

}
.month .scroll-view-item-select{
  border-bottom: 2px solid #00FFC6;
}
.prev,.next{
  width: 20rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.prev image{
  width: 20rpx;
  height: 30rpx;
}
.next image{
  width: 20rpx;
  height: 30rpx;
}
.h_c_bot{
  width: 92%;
  height: 88%;
  position: relative;
}
.h_c_bot1{
 background: rgba(255,255,255,.1);
 width: 100%;
 border-radius: 20rpx;
 position: absolute;
 top: 10%;
 height: 80%;
}
.h_c_bot2{
 background: rgba(255,255,255,.2);
 width: 92%;
 height: 90%;
 border-radius: 20rpx;
 position: absolute;
 left: 4%;
 top: 5%;
}
.h_c_bot3{
 width: 84%;
 height: 100%;
 border-radius: 20rpx;
 position: absolute;
 left: 8%;
 top: 0;
}
.h_c_bot_bg{
  width: 100%;
  height: 100%;
}
.h_c_bot_bg image{
  width: 100%;
  height:100%;
}
.h_c_bot_cont{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height:88%;
  padding-top: 12%;
}
.h_c_bot_cont .profit{
  display: flex;
  flex-wrap: wrap;
}
.h_c_bot_cont  .profit .profit_num{
  font-size: 63rpx;
  color: #4837BC;
  width: 100%;
  text-align: center;
  font-weight: bold;
}
.h_c_bot_cont .profit .profit_words{
  font-size: 28rpx;
  font-weight: bold;
  color: #737B91;
  width: 100%;
  text-align: center;
}
.h_c_bot_cont .pro_under{
  display: flex;
  justify-content: space-around;
  flex-wrap: nowrap;
  width: 100%;
  margin-top: 20rpx;
}
.h_c_bot_cont .pro_under .public{
  width: 42%;
}
.h_c_bot_cont .pro_under .public .public_top{
  width: 100%;
  height: 60rpx;
  border-radius: 60rpx;
  border: 1px solid #B7BEC5;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
}
.h_c_bot_cont .pro_under .public .public_top .public_top_img{
  width: 25rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
}
.h_c_bot_cont .pro_under .public .public_top .public_top_img image{
  width: 100%;
  height: 20rpx;
}
.h_c_bot_cont .pro_under .public .public_top .public_num{
  font-size: 27rpx;
  color: #4837BC;
}
.h_c_bot_cont .pro_under .public .public_words{
  font-size: 28rpx;
  color: #8C9AA8;
  text-align: center;
  margin-top: 10rpx;
}
.details_title{
  width: 88%;
  margin-left: 5%;
  border-left: 2px solid  #00FFC6;
  position: absolute;
  bottom: 60rpx;
  color: white;
  padding-left: 1%;
  padding-right: 1%;
  font-size: 32rpx;
  font-weight: bold;
}
.details_list{
  width: 90%;
  margin-left: 5%;
}
.details_list .det_item{
  width: 100%;
  height: 136rpx;
  border-bottom: 1px solid rgba(183,190,197
,.3);
  font-size: 28rpx;
  color: #737B91;
  /* font-weight: bold; */
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  align-items: center;
}
.details_list .det_item:last-child{
  border-bottom: 0;
}

.details_list .det_item  .det_left{
  color:  #737B91;
  width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
}
.details_list .det_item .det_left_impor{
  color: #71C009;
   width: 380rpx;
  white-space: nowrap;
  overflow: hidden;
}
.details_list .det_item .det_right_top,.det_right_bottom{
  display: flex;
  justify-content: center;
  align-items: center;
}
.details_list .det_item .det_right text{
  margin-right: 20rpx;
  display: inline-block;
}
.details_list .det_item .det_right image{
  width: 23rpx;
  height: 23rpx;
  margin-right: 15rpx;
}
.details_list .det_item .det_right .det_right_num{
  width: 170rpx;
  white-space: nowrap;
  overflow: hidden;
  text-align: right;
}

